<mvc:View xmlns:mvc="sap.ui.core.mvc"
          controllerName = "sap.ui.demo.controller.App"
          xmlns="sap.m">
    <Button text = "Add 1"
            press = ".addOne"/>
    <Text text="0" id="counter" />
    <List
        id = "episodeList"
        headerText="{/title}"
        items="{/episodes}"
        >
        <items>
        <StandardListItem
                title = "{title}"
                description = "{index}"
        />
        </items>
    </List>
</mvc:View>